<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <%= beautify_params f.label(:email), f.email_field(:email) %>
  <%= beautify_params f.label(:password), f.email_field(:password) %>

  <% if devise_mapping.rememberable? -%>
  	<%= beautify_params '', f.check_box(:remember_me) + f.label(:remember_me) %>
  <% end -%>

  <%= beautify_params '', f.submit("Sign in", :class => 'btn') %>

<% end %>

<%= render :partial => "devise/shared/links" %>